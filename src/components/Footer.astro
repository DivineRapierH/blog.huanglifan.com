---
import { SITE_NAME,SITE_TITLE } from "../consts";
const { theme } = Astro.props;
const date = new Date();
const year = date.getFullYear();
---

<div class:list={["footer-main", { "footer-dark": theme === "dark" }]}>
  <div class="content-body footer-wraper">
    <div class="footer-box">
      <div class="foot-nav">
        <div class="foot-nav-items">
          <div class="item">
            <div class="logo">{SITE_TITLE}</div>
          </div>

          <div class="item community">
            <div class="item-title">Social media</div>
            <a href="https://twitter.com/DivineRapierH" target="_blank">Twitter</a>
            <a href="https://github.com/divinerapierh" target="_blank">Github</a>
            <a href="https://t.me/divinerapierh" target="_blank">Telegram</a>
          </div>

        </div>
      </div>
      <div class="bottom">
        <div class="copyright">
          &copy; {`2022-${year}  ${SITE_NAME}`} 
          <a href="//github.com/divinerapierh/blog.huanglifan.com">blog.huanglifan.com</a>
        </div>
      </div>
    </div>
  </div>
</div>
